{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=PurrfectMatchDb;Integrated Security=true;TrustServerCertificate=true;"
  },
  "Frontend": {
    "BaseUrl": "https://localhost:3000"
  },
  "BlobStorage": {
    "ConnectionString": "UseDevelopmentStorage=true",
    "ContainerName": "your-dev-container-name"
  },
  "Logging": {
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "EmailSettings": {
    "SmtpHost": "sandbox.smtp.mailtrap.io",
    "SmtpPort": 587,
    "SmtpUser": "your-dev-smtp-username",
    "SmtpPass": "your-dev-smtp-password"
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:3000"
    ]
  }
}
